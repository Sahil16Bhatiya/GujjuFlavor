<script>
  const allowedPaymentMethods = ['CARD', 'TOKENIZED_CARD'];
const allowedCardNetworks = ['AMEX', 'DISCOVER', 'MASTERCARD', 'VISA'];

const paymentsClient = new google.payments.api.PaymentsClient({environment: 'TEST'});

function onGooglePaymentButtonClicked() {
  paymentsClient.loadPaymentData(getGooglePaymentDataConfiguration())
  .then( paymentData => console.log(paymentData) )
  .catch( err => console.log(err) );
}

function getGatewayConfiguration() {
  return {
    gateway: 'example',
    gatewayMerchantId: 'abc123'
  };
}

function getGoogleTransactionInfo() {
  return {
    currencyCode: 'USD',
    totalPriceStatus: 'FINAL',
    totalPrice: '5.00'
  };
}

function getGooglePaymentDataConfiguration() {
  return {
    allowedPaymentMethods: allowedPaymentMethods,
    cardRequirements: {allowedCardNetworks: allowedCardNetworks},
    paymentMethodTokenizationParameters: {
      tokenizationType: 'PAYMENT_GATEWAY',
      parameters: getGatewayConfiguration()
    },
    transactionInfo: getGoogleTransactionInfo()
  };
}

function addGooglePayButton() {
  const button = document.createElement('button');
  button.className = 'google-pay';
  button.title = 'Google Pay';
  button.addEventListener('click', onGooglePaymentButtonClicked);

  document.getElementById('container').appendChild(button);
}

paymentsClient.isReadyToPay({allowedPaymentMethods: allowedPaymentMethods})
  .then( response => {
    if (response.result) {
      addGooglePayButton();
    } else {
      const p = document.createElement('p');
      p.innerText = 'no';
      document.getElementById('container').appendChild(p);
    }
  })
  .catch( err => console.error(err) );
</script>
